{
    "name": "Mnist_LeNet",
    "n_gpu": 1,
    
    "arch": {
        "type": "MnistModel",
        "args": {}
    },
    "data_loader": {
        "type": "SampleDataLoader",
        "args":{
            "batch_size": 128,
            "shuffle": true,
            "validation_split": 0.1,
            "num_workers": 2,
            "dataset_args": {
                "data_dir": "data/",
                "training": true
            }
        }
    },
    "optimizer": {
        "type": "Adam",
        "args": {
            "lr": 0.005,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "losses": [
        {
            "type": "CrossEntropyLoss",
            "args": {
                "weight": 1,
                "nick_name": "cross_entropy_loss"
            }
        }
    ],
    "metrics": [
        {
            "type": "TopKAcc",
            "args": {
                "k":1
            }
        },
        {
            "type": "TopKAcc",
            "args": {
                "k":5
            }
        }
    ],
    "lr_scheduler": {
        "type":"StepLR",
        "args":{
            "step_size":10,
            "gamma":0.9
        }
    },
    "trainer": {
        "epochs": 100,
        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "monitor": "val_loss",
        "monitor_mode": "min"
    },
    "trainer_args": {
        "show_all_loss": true,
        "log_step": 40
    },
    "visualization":{
        "tensorboardX": true,
        "log_dir": "saved/runs"
    }
}
